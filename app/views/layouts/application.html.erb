<!DOCTYPE html>
<html>
  <head>
    <title>ServiceCenter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <% if client_signed_in? %>
      <%= javascript_pack_tag 'hello_client' %>
      <%= link_to 'Log out', destroy_client_session_path, method: :delete %>
    <% elsif staff_signed_in? %>
      <%= javascript_pack_tag 'hello_staff' %>
      <%= link_to 'Log out', destroy_staff_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Log in as client', new_client_session_path %>
      <%= link_to 'Log in as staff', new_staff_session_path %>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
